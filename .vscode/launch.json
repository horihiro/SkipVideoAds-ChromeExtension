{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "runtimeArgs": [
        "--remote-debugging-port=9222",
        "--load-extension=${workspaceFolder}", // this is the path to the extension folder
        // "https://www.amazon.co.jp/Amazon-Video/b/",
        // "https://tver.jp/",
        // "https://www.youtube.com/feed/trending",
        // "https://abema.tv/video/"
      ],
      "env": {
        "CHROME_DEVELOPER_TOOLS": true
      },
      "preLaunchTask": "build"
    },
    {
      "type": "msedge",
      "request": "launch",
      "name": "Launch Edge",
      "runtimeArgs": [
        "--remote-debugging-port=9222",
        "--load-extension=${workspaceFolder}", // this is the path to the extension folder
        // "https://www.amazon.co.jp/Amazon-Video/b/",
        // "https://tver.jp/",
        // "https://www.youtube.com/feed/trending",
        // "https://abema.tv/video/"
      ],
      "env": {
        "CHROME_DEVELOPER_TOOLS": true
      },
      "preLaunchTask": "build"
    }
  ]
}